# ---------------------------------------------------------------------------- #
# pfcs.out
# ---------------------------------------------------------------------------- #
bin/pfcs.out: bin/log.o bin/gpgll.o bin/pfcs.o
	cc bin/log.o bin/gpgll.o bin/pfcs.o -o bin/pfcs.out

# ---------------------------------------------------------------------------- #
# pfcs.o
# ---------------------------------------------------------------------------- #
bin/pfcs.o: src/pfcs.c src/pfcs.h 
	cc -c src/pfcs.c -o bin/pfcs.o

# ---------------------------------------------------------------------------- #
# gpgll.out
# ---------------------------------------------------------------------------- #
#bin/gpgll.out: bin/log.o bin/gpgll.o
#	cc bin/log.o bin/gpgll.o -o bin/gpgll.out

# ---------------------------------------------------------------------------- #
# gpgll.o
# ---------------------------------------------------------------------------- #
bin/gpgll.o: src/gpgll.c src/gpgll.h
	cc -c src/gpgll.c -o bin/gpgll.o

# ---------------------------------------------------------------------------- #
# log.o
# ---------------------------------------------------------------------------- #
bin/log.o: src/log.c src/log.h
	cc -c src/log.c -o bin/log.o

# ---------------------------------------------------------------------------- #
# mathgps.o
# ---------------------------------------------------------------------------- #
bin/mathgps.o: src/mathgps.c src/mathgps.h
	cc -c src/mathgps.c -o bin/mathgps.o -lm
