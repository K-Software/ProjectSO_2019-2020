project.out: src/project.c mathgps.o log.o pfcs_util.o gpgll.o string_util.o\
time_util.o process_util.o shifter_util.o pipe_channel.o socket_channel.o\
file_channel.o pfcs.o transducers.o wes.o failure_generator.o
	cc $^ -o $@

# ---------------------------------------------------------------------------- #
# failure_generator.o
# ---------------------------------------------------------------------------- #
failure_generator.o: src/failure_generator.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# wes.o
# ---------------------------------------------------------------------------- #
wes.o: src/wes.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# transducers.o
# ---------------------------------------------------------------------------- #
transducers.o: src/transducers.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# pfcs.o
# ---------------------------------------------------------------------------- #
pfcs.o: src/pfcs.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# pfcs_util.o
# ---------------------------------------------------------------------------- #
pfcs_util.o: src/pfcs_util.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# pipe_channel.o
# ---------------------------------------------------------------------------- #
pipe_channel.o: src/pipe_channel.c
	cc -c $< -o $@

# ---------------------------------------------------------------------------- #
# socket_channel.o
# ---------------------------------------------------------------------------- #
socket_channel.o: src/socket_channel.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# file_channel.o
# ---------------------------------------------------------------------------- #
file_channel.o: src/file_channel.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# gpgll.o
# ---------------------------------------------------------------------------- #
gpgll.o: src/gpgll.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# log.o
# ---------------------------------------------------------------------------- #
log.o: src/log.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
