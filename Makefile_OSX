string_util.o: src/string_util.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# time_util.o
# ---------------------------------------------------------------------------- #
time_util.o: src/time_util.c
	cc -c $^ -o $@

# ---------------------------------------------------------------------------- #
# mathgps.o
# ---------------------------------------------------------------------------- #
mathgps.o: src/mathgps.c
	cc -c $^ -o $@

clean:
	rm project.out failure_generator.o wes.o transducers.o pfcs.o pfcs_util.o\
  pipe_channel.o socket_channel.o file_channel.o gpgll.o log.o shifter_util.o\
  process_util.o string_util.o time_util.o mathgps.o

install:
	mkdir ./bin
	mkdir ./log
	mkdir ./tmp
	cp project.out ./bin

uninstall:
	rm -rf ./bin
	rm -rf ./log
	rm -rf ./tmp